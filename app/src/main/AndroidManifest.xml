<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jose.nubefact">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/home"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Formularios.ventas_formulario"
            android:label="Ingrese los datos de la venta"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Formularios.clientes_formulario"
            android:label="Ingrese los datos del cliente"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Formularios.catalogo_formulario"
            android:label="Ingrese los datos del producto"
            android:theme="@style/AppTheme" />

        <activity android:name="com.example.jose.nubefact.Nubefact" android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.jose.nubefact.Login.SignupActivity" android:theme="@style/AppTheme.Dark" />
    </application>

</manifest>